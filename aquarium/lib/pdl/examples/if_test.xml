<protocol>

  <information>A test of the if statement</information>

  <assign><var>x</var><value>1</value></assign>

  <if>

    <condition>%{x}>2</condition>

    <then>
      <step><description>In then portion.</description></step>
    </then>

    <else>
      
      <if>
        <condition>2>3</condition>
        <then>
          <step><description>In else-then portion.</description></step>
        </then>
        <else>
          <step><description>In else-else portion.</description></step>
        </else>
      </if>

    </else>

  </if>

  <step><description>Done</description></step>

</protocol>