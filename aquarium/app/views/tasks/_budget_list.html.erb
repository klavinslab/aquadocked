<form action="" id='budget-select'>

  <table class="table">

      <tr>
        <th></th>
        <th>Budget</th>
        <th>Description</th>
        <th>Contact</th>
        <th>Quota</th>
        <th>Spent this month</th>
      </tr>

    <% @budget_info.each do |bi| %>

      <tr>

        <td>
          <input type="radio" 
                name="budget" 
                value="<%= bi[:budget].id %>" 
                 <%= bi[:spent_this_month] >= bi[:quota] ? "disabled" : "" %> > 
        </td>

        <td>
          <%= bi[:budget].name %> 
        </td>

        <td>
          <%= bi[:budget].description %> 
        </td>

        <td>
          <%= bi[:budget].contact %> 
        </td>

        <td>
          <span><%= number_to_currency(bi[:quota]) %></span>
        </td>

        <td>
          <span><%= number_to_currency(bi[:spent_this_month]) %></span>
        </td>

      </tr>
    <% end %>

  </table>
</form>  