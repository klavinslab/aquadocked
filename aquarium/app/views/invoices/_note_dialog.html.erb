<div id="noteDialog" class="modal hide fade">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Add a note to selected transactions</h3>
  </div>

  <div class="modal-body">
    <textarea id="note-text" style="width:100%; height: 200px;"></textarea>
  </div>

  <div class="modal-footer">
    <a href="#" class="btn" onclick="$('#noteDialog').modal('hide')">Cancel</a>
    <a href="#" class="btn btn-primary" onclick="save_note()">Save</a>
  </div>

</div>

